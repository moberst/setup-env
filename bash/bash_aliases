#!/bin/bash

# NeoVim
alias vim="nvim"

# Aliases for directory navigation
alias ..="cd .."

# Alias to pretty-print the current path, dirs
alias path='echo -e ${PATH//:/\\n}'
alias dirs='dirs -v'

# Tmux
alias tmux="tmux -2"

# Common typos
alias sl="ls"

# Exa
alias ls="exa --git --icons"
alias sl="exa --git --icons"
alias ll="exa --git --long --icons -h"
